<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" 
	xmlns:pro="http://www.liquibase.org/xml/ns/pro" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd ">

	<property name="uuid_function" value="uuid_generate_v4()" dbms="postgresql" />
	<property name="timestamp_function" value="current_timestamp()" dbms="postgresql" />
	<property name="timestamp" value="TIMESTAMPTZ" dbms="postgresql" />

	<changeSet id="202002192033" author="Julius Krah" context="master">
		<createTable tableName="tenant">
			<column name="id" type="UUID" defaultValueComputed="${uuid_function}">
				<constraints primaryKey="true" primaryKeyName="tenant_id_pk" />
			</column>
			<column name="name" remarks="Name of the tenant" type="VARCHAR(50)">
				<constraints unique="true" uniqueConstraintName="tenant_name_unq" />
			</column>
			<column name="created_date" type="${timestamp}" defaultValueComputed="${timestamp_function}" />
			<column name="database_username" type="VARCHAR(60)" />
			<column name="database_password" type="VARCHAR(60)" />
			<column name="database_url" type="VARCHAR(100)" />
			<column name="domain" type="VARCHAR(100)" remarks="This can be the subdomain or custom domain" />
			<column name="enabled" type="BOOLEAN" defaultValueBoolean="true" />
		</createTable>
		<addNotNullConstraint tableName="tenant" columnDataType="${timestamp}" columnName="created_date" validate="true" constraintName="tenant_created_date_cnst" />
	</changeSet>
	<changeSet id="202002192341" author="Julius Krah" context="master AND dev">
		<loadData tableName="tenant" relativeToChangelogFile="false" file="db/changelog/data/tenants.csv" />
	</changeSet>
</databaseChangeLog>